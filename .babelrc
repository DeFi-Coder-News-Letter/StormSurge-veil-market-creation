{
  "presets": ["@babel/react", "@babel/typescript", "@babel/env"],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }]
  ],
  "env": {
    "development": {
      "plugins": [
        [
          "emotion",
          {
            "autoLabel": true,
            "labelFormat": "[filename]-[local]"
          }
        ]
      ]
    },
    "production": {
      "plugins": ["emotion"]
    }
  }
}
